# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.bat]
indent_size = 4
indent_style = space

[*.ledger]
indent_size = 4
indent_style = space

[*.beancount]
indent_size = 2
indent_style = space

[*.md]
indent_size = 4
indent_style = space

[tests/accounts.ledger]
trim_trailing_whitespace = false

[tests/metadata.ledger]
trim_trailing_whitespace = false

[tests/spacing.ledger]
trim_trailing_whitespace = false

