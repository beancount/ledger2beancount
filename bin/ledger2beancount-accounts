# convert a ledger-cli "chart of accounts" file to beancount format

use strict;
use warnings;

use YAML::XS qw(LoadFile);

my $config = LoadFile('ledger2beancount.yml');

sub print_metadata($$) {
    my ($key, $value) = @_;
    print ' ' x $config->{beancount_indent}, lc($key), ": \"$value\"\n";
}

while (my $l = <>) {
    chomp $l;

    if ($l =~ /^account\s+(.*)/) {  # account declaration
	print "$config->{account_open_date} open $1\n";
    } elsif ($l =~ /^\s+note\s+(.*)/) {  # note
	print_metadata("description", $1);
    } elsif ($l =~ /^\s+;\s*(\S+):\s*(.*)/) {  # metadata
	print_metadata($1, $2);
    } else {
	print "$l\n";
    }
}
